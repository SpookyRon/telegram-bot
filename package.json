{
  "dependencies": {
    "express": "^5",
    "http-proxy-middleware": "^2.0.6",
    "node-telegram-bot-api": "^0.66.0",
    "ws": "^8.18.3"
  },
  "scripts": {
    "dev": "npm-run-all --parallel dev:front-admin dev:customer dev:admin-auth proxy",
    "dev:front-admin": "cd client/admin/front-admin && npm run dev",
    "dev:front-customer": "cd client/customer && npm run dev",
    "dev:admin-auth": "cd client/admin/auth && npm run dev",
    "dev:customer": "cd client/customer && npm run dev",
    "proxy": "node ./proxy.js",

    "install": "npm-run-all --parallel install:front-admin  install:admin-auth install:auth install:customer",
    "install:front-admin": "cd client/admin/front-admin && npm install",
    "install:front-customer": "cd client/customer && npm install",
    "install:admin-auth": "cd client/admin/auth && npm install",
    "install:customer": "cd client/customer && npm install"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5"
  }
}
